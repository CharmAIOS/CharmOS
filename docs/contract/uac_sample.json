{
  "version": "0.1.0",
  "persona": {
    "name": "Research Agent",
    "description": "An autonomous research assistant capable of gathering and summarizing information."
  },
  "goals": [
    "Collect relevant data from multiple sources",
    "Summarize findings into concise insights"
  ],
  "capabilities": [
    "web_search",
    "text_summarization"
  ],
  "constraints": [
    "Respect content licensing and data usage limits"
  ],
  "tools": [
    "serpapi.search",
    "notion.create_page"
  ],
  "prompts": {
    "system": "You are a helpful research assistant.",
    "few_shots": [
      {
        "role": "user",
        "content": "Find the latest research about renewable energy."
      },
      {
        "role": "assistant",
        "content": "Summarizing top findings from three sources."
      }
    ]
  },
  "workflow": {
    "nodes": [
      {
        "id": "n1",
        "kind": "tool",
        "label": "Search Web",
        "ref": "serpapi.search",
        "x-original": {
          "framework": "CrewAI",
          "version": "0.3",
          "raw": {
            "type": "SearchTool",
            "query": "{{goal}}"
          }
        }
      },
      {
        "id": "n2",
        "kind": "llm",
        "label": "Summarize Results",
        "ref": "openai.gpt-4-turbo"
      }
    ],
    "edges": [
      {
        "from": "n1",
        "to": "n2"
      }
    ],
    "entry": "n1",
    "exits": ["n2"]
  },
  "policies": {
    "allow_degradation": true,
    "fallback_strategy": "via_secure_wrapper",
    "require_human_on_irreversible_actions": true,
    "require_equivalence": ["text_summarization"],
    "allowed_degradations": [
      {
        "capability": "web_search",
        "max_level": "minor"
      }
    ]
  },
  "mapping_hints": {
    "target_framework_preference": "LangGraph",
    "notes": "This sample can be used as a reference for adapter validation."
  }
}
