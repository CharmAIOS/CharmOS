{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://charm.ai/contracts/uac.schema.json",
  "title": "Unified Agent Contract (UAC) v0.1.0",
  "description": "A unified, framework-agnostic contract for representing agent definitions across CrewAI, LangGraph, and other systems.",
  "type": "object",
  "required": ["version", "persona", "goals", "capabilities"],
  "additionalProperties": false,
  "patternProperties": {
    "^x-": {}
  },
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (semantic versioning)",
      "default": "0.1.0"
    },
    "persona": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Agent's identity name"
        },
        "description": {
          "type": "string",
          "description": "Short description of the agent"
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "goals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "High-level goals or objectives of the agent"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Semantic abilities, e.g. send_message, read_database"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Operational or ethical constraints the agent follows"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of framework-exposed tools/plugins (e.g., notion.read_page)"
    },
    "prompts": {
      "type": "object",
      "description": "Prompt templates used to define agent behavior",
      "properties": {
        "system": {
          "type": "string"
        },
        "few_shots": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["role", "content"],
            "properties": {
              "role": {
                "type": "string",
                "enum": ["system", "user", "assistant"]
              },
              "content": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "patternProperties": {
              "^x-": {}
            }
          }
        },
        "templates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "io_schemas": {
      "type": "object",
      "description": "I/O schemas defining expected input/output structure",
      "properties": {
        "inputs": {
          "type": "object",
          "description": "Input schema (JSON Schema)"
        },
        "outputs": {
          "type": "object",
          "description": "Output schema (JSON Schema)"
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "model_prefs": {
      "type": "object",
      "description": "Model and inference preferences (optional overrides)",
      "properties": {
        "model": {
          "type": "string"
        },
        "temperature": {
          "type": "number"
        },
        "max_tokens": {
          "type": "integer"
        },
        "provider": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "interaction_prefs": {
      "type": "object",
      "description": "Preferences for multi-agent collaboration or turn-taking",
      "properties": {
        "turn_taking": {
          "type": "string",
          "enum": ["auto", "manual", "hybrid"]
        },
        "critique_style": {
          "type": "string",
          "enum": ["none", "light", "strict"]
        },
        "collaboration_mode": {
          "type": "string",
          "enum": ["single", "debate", "planner-worker"]
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "workflow": {
      "type": "object",
      "description": "Agent's internal workflow or execution graph definition",
      "required": ["nodes"],
      "properties": {
        "nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "kind"],
            "properties": {
              "id": {
                "type": "string"
              },
              "kind": {
                "type": "string",
                "enum": ["llm", "tool", "decision", "subgraph", "opaque"],
                "description": "Type of the node"
              },
              "label": {
                "type": "string"
              },
              "ref": {
                "type": "string"
              },
              "x-original": {
                "type": "object",
                "description": "Original definition snapshot for lossless preservation",
                "properties": {
                  "framework": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  },
                  "raw": {}
                },
                "additionalProperties": true,
                "patternProperties": {
                  "^x-": {}
                }
              }
            },
            "additionalProperties": false,
            "patternProperties": {
              "^x-": {}
            }
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": {
                "type": "string"
              },
              "to": {
                "type": "string"
              },
              "condition": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "patternProperties": {
              "^x-": {}
            }
          }
        },
        "entry": {
          "type": "string"
        },
        "exits": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "policies": {
      "type": "object",
      "description": "Governance and fallback policies controlling runtime decisions",
      "properties": {
        "allow_degradation": {
          "type": "boolean",
          "default": true
        },
        "fallback_strategy": {
          "type": "string",
          "enum": ["via_secure_wrapper", "manual_confirmation", "skip"],
          "default": "via_secure_wrapper"
        },
        "require_human_on_irreversible_actions": {
          "type": "boolean",
          "default": true
        },
        "require_equivalence": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Capabilities that must be strictly equivalent"
        },
        "allowed_degradations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["capability", "max_level"],
            "properties": {
              "capability": {
                "type": "string"
              },
              "max_level": {
                "type": "string",
                "enum": ["minor", "moderate"]
              }
            },
            "additionalProperties": false,
            "patternProperties": {
              "^x-": {}
            }
          }
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    },
    "mapping_hints": {
      "type": "object",
      "description": "Hints for target framework selection or exclusion",
      "properties": {
        "target_framework_preference": {
          "type": "string"
        },
        "disallow_targets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "patternProperties": {
        "^x-": {}
      }
    }
  }
}
